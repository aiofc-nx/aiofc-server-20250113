{
  "compilerOptions": {
    "target": "ES2021",
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["node"],
    "lib": ["ES2022", "DOM"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": false,
    "declaration": true,
    "paths": {
      "@aiofc/drizzle-postgres-js": [
        "packages/drizzle-postgres-js/src/index.ts"
      ],
      "@aiofc/drizzle-schema": ["packages/drizzle-schema/src/index.ts"],
      "@aiofc/utils": ["packages/utils/src/index.ts"]
    }
  }
}
